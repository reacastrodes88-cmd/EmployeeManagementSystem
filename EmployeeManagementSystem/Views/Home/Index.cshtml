@{
    ViewData["Title"] = "Home";
}

@section Styles {
    <style>
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 100px 0;
            text-align: center;
        }

            .hero-section h1 {
                font-size: 3rem;
                font-weight: 700;
                margin-bottom: 20px;
            }

            .hero-section p {
                font-size: 1.25rem;
                opacity: 0.9;
                margin-bottom: 30px;
            }

        .btn-hero {
            background: white;
            color: #667eea;
            padding: 15px 40px;
            border-radius: 30px;
            font-weight: 600;
            font-size: 1.1rem;
            text-decoration: none;
            display: inline-block;
            transition: transform 0.3s;
        }

            .btn-hero:hover {
                transform: scale(1.05);
                color: #764ba2;
            }

        .features-section {
            padding: 80px 0;
            background: #f8f9fa;
        }

        .feature-card {
            background: white;
            border-radius: 15px;
            padding: 40px 30px;
            text-align: center;
            box-shadow: 0 5px 20px rgba(0,0,0,0.08);
            transition: transform 0.3s;
            height: 100%;
        }

            .feature-card:hover {
                transform: translateY(-10px);
            }

        .feature-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 25px;
        }

            .feature-icon i {
                font-size: 35px;
                color: white;
            }

        .feature-card h4 {
            font-weight: 600;
            margin-bottom: 15px;
            color: #333;
        }

        .feature-card p {
            color: #666;
            margin-bottom: 0;
        }

        .about-section {
            padding: 80px 0;
        }

            .about-section h2 {
                font-weight: 700;
                margin-bottom: 30px;
            }

            .about-section p {
                font-size: 1.1rem;
                color: #555;
                line-height: 1.8;
            }
    </style>
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <h1><i class="fas fa-users-cog me-3"></i>Smartron Technology</h1>
        <p>Streamline your HR processes with our comprehensive employee management solution</p>
        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            @if (User.IsInRole("HR"))
            {
                <a asp-controller="HR" asp-action="Dashboard" class="btn-hero">
                    <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
                </a>
            }
            else
            {
                <a asp-controller="Employee" asp-action="Dashboard" class="btn-hero">
                    <i class="fas fa-tachometer-alt me-2"></i>Go to My Dashboard
                </a>
            }
        }
        else
        {
            <a asp-controller="Account" asp-action="Login" class="btn-hero me-2">
                <i class="fas fa-sign-in-alt me-2"></i>Login
            </a>
            <a asp-controller="JobApplication" asp-action="Apply" class="btn-hero" style="background: #28a745;">
                <i class="fas fa-briefcase me-2"></i>Apply for a Job
            </a>
        }
    </div>
</section>

<!-- Features Section -->
<section class="features-section">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">System Features</h2>
            <p class="text-muted">Everything you need to manage your workforce efficiently</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <h4>Employee Management</h4>
                    <p>Add, edit, and manage employee records with ease. Keep all employee information organized in one place.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <h4>Leave Management</h4>
                    <p>Process leave requests efficiently. Employees can file leaves and HR can approve or reject them.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <h4>Department & Positions</h4>
                    <p>Organize your workforce by departments and positions. Easy categorization and filtering.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h4>Role-Based Access</h4>
                    <p>Secure access control with HR and Employee roles. Each role has specific permissions and views.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h4>Dashboard & Reports</h4>
                    <p>Visual dashboards with key metrics. Get insights about your workforce at a glance.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-user-edit"></i>
                    </div>
                    <h4>Self-Service Portal</h4>
                    <p>Employees can view and update their own profiles, file leaves, and track their requests.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section class="about-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h2>About This System</h2>
                <p>
                    The Smartron Technology is designed to help organizations manage their workforce efficiently.
                    With features like employee records management, leave processing, and role-based access control,
                    HR teams can focus on what matters most — their people.
                </p>
                <p>
                    Whether you're a small business or a growing enterprise, our system adapts to your needs
                    with an intuitive interface and powerful features.
                </p>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-laptop-code" style="font-size: 200px; color: #667eea; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</section>