@model EmployeeManagementSystem.Models.Employee
@{
    ViewData["Title"] = "Employee Details";
}

@section Styles {
    <style>
        .profile-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            overflow: hidden;
        }

        .profile-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 40px;
            text-align: center;
        }

        .profile-avatar {
            width: 100px;
            height: 100px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            font-size: 40px;
            font-weight: 700;
            color: #667eea;
        }

        .profile-body {
            padding: 30px;
        }

        .info-group {
            margin-bottom: 25px;
        }

            .info-group h6 {
                color: #667eea;
                font-weight: 600;
                margin-bottom: 15px;
                padding-bottom: 10px;
                border-bottom: 2px solid #f0f0f0;
            }

        .info-item {
            display: flex;
            margin-bottom: 12px;
        }

        .info-label {
            width: 150px;
            color: #888;
            font-size: 0.9rem;
        }

        .info-value {
            flex: 1;
            font-weight: 500;
            color: #333;
        }

        .badge-active {
            background: #28a745;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
        }

        .badge-inactive {
            background: #dc3545;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
        }

        .btn-action {
            padding: 10px 25px;
            border-radius: 20px;
            font-weight: 500;
        }
    </style>
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="profile-card">
                <!-- Profile Header -->
                <div class="profile-header">
                    <div class="profile-avatar">
                        @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                        {
                            <img src="@Model.ProfilePicturePath" alt="@Model.FullName" style="width: 100%; height: 100%; object-fit: cover;">
                        }
                        else
                        {
                            @Model.FirstName[0]
                            @Model.LastName[0]
                        }
                    </div>
                    <h3 class="fw-bold mb-1">@Model.FullName</h3>
                    <p class="mb-2 opacity-75">@Model.Position?.PositionTitle</p>
                    <p class="mb-0">
                        @if (Model.IsActive)
                        {
                            <span class="badge-active">Active Employee</span>
                        }
                        else
                        {
                            <span class="badge-inactive">Inactive</span>
                        }
                    </p>
                </div>

                <!-- Profile Body -->
                <div class="profile-body">
                    <!-- Personal Information -->
                    <div class="info-group">
                        <h6><i class="fas fa-user me-2"></i>Personal Information</h6>
                        <div class="info-item">
                            <span class="info-label">Employee #:</span>
                            <span class="info-value">@Model.EmployeeNumber</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Full Name:</span>
                            <span class="info-value">@Model.FullName</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Gender:</span>
                            <span class="info-value">@Model.Gender</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Date of Birth:</span>
                            <span class="info-value">@Model.DateOfBirth.ToString("MMMM dd, yyyy")</span>
                        </div>
                    </div>

                    <!-- Contact Information -->
                    <div class="info-group">
                        <h6><i class="fas fa-address-book me-2"></i>Contact Information</h6>
                        <div class="info-item">
                            <span class="info-label">Email:</span>
                            <span class="info-value">@Model.Email</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Phone:</span>
                            <span class="info-value">@(Model.PhoneNumber ?? "N/A")</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Address:</span>
                            <span class="info-value">@(Model.Address ?? "N/A")</span>
                        </div>
                    </div>

                    <!-- Employment Information -->
                    <div class="info-group">
                        <h6><i class="fas fa-briefcase me-2"></i>Employment Information</h6>
                        <div class="info-item">
                            <span class="info-label">Department:</span>
                            <span class="info-value">@Model.Department?.DepartmentName</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Position:</span>
                            <span class="info-value">@Model.Position?.PositionTitle</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Date Hired:</span>
                            <span class="info-value">@Model.DateHired.ToString("MMMM dd, yyyy")</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Salary:</span>
                            <span class="info-value">@(Model.Salary?.ToString("C") ?? "N/A")</span>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-action">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-warning btn-action">
                                <i class="fas fa-edit me-1"></i>Edit
                            </a>
                            <form asp-action="Delete" asp-route-id="@Model.EmployeeId" method="post" class="d-inline" onsubmit="return confirm('Are you sure?');">
                                <button type="submit" class="btn btn-danger btn-action">
                                    <i class="fas fa-trash me-1"></i>Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>