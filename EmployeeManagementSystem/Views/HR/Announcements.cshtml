@model IEnumerable<EmployeeManagementSystem.Models.Announcement>
@{
    ViewData["Title"] = "Announcements";
}

@section Styles {
    <style>
        .page-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 30px;
        }

        .announcement-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 20px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            border-left: 5px solid #667eea;
        }

            .announcement-card.urgent {
                border-left-color: #dc3545;
            }

            .announcement-card.important {
                border-left-color: #ffc107;
            }

        .badge-urgent {
            background: #dc3545;
            color: white;
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
        }

        .badge-important {
            background: #ffc107;
            color: #333;
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
        }

        .badge-normal {
            background: #28a745;
            color: white;
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
        }

        .badge-active {
            background: #28a745;
            color: white;
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
        }

        .badge-inactive {
            background: #6c757d;
            color: white;
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
        }
    </style>
}

<div class="container py-4">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="fw-bold mb-1"><i class="fas fa-bullhorn me-2"></i>Announcements</h2>
                <p class="mb-0 opacity-75">Manage company-wide announcements</p>
            </div>
            <a asp-action="CreateAnnouncement" class="btn btn-light">
                <i class="fas fa-plus me-1"></i>New Announcement
            </a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        @foreach (var announcement in Model)
        {
            <div class="announcement-card @(announcement.Priority == EmployeeManagementSystem.Models.AnnouncementPriority.Urgent ? "urgent" : announcement.Priority == EmployeeManagementSystem.Models.AnnouncementPriority.Important ? "important" : "")">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h5 class="fw-bold mb-2">@announcement.Title</h5>
                        <div class="mb-2">
                            @switch (announcement.Priority)
                            {
                                case EmployeeManagementSystem.Models.AnnouncementPriority.Urgent:
                                    <span class="badge-urgent"><i class="fas fa-exclamation-triangle me-1"></i>Urgent</span>
                                    break;
                                case EmployeeManagementSystem.Models.AnnouncementPriority.Important:
                                    <span class="badge-important"><i class="fas fa-star me-1"></i>Important</span>
                                    break;
                                default:
                                    <span class="badge-normal"><i class="fas fa-info-circle me-1"></i>Normal</span>
                                    break;
                            }

                            @if (announcement.IsActive)
                            {
                                <span class="badge-active ms-2">Active</span>
                            }
                            else
                            {
                                <span class="badge-inactive ms-2">Inactive</span>
                            }
                        </div>
                    </div>
                    <div class="text-end">
                        <a asp-action="EditAnnouncement" asp-route-id="@announcement.AnnouncementId" class="btn btn-sm btn-outline-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <form asp-action="DeleteAnnouncement" asp-route-id="@announcement.AnnouncementId" method="post" class="d-inline" onsubmit="return confirm('Delete this announcement?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>

                <p class="mb-2">@announcement.Content</p>

                <div class="text-muted small">
                    <i class="fas fa-user me-1"></i>Posted by: <strong>@announcement.PostedBy</strong>
                    <span class="mx-2">|</span>
                    <i class="fas fa-calendar me-1"></i>@announcement.DatePosted.ToString("MMM dd, yyyy")

                    @if (announcement.ExpiryDate != null)
                    {
                        <span class="mx-2">|</span>
                        <i class="fas fa-clock me-1"></i>
                        <text>Expires: @announcement.ExpiryDate?.ToString("MMM dd, yyyy")</text>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-bullhorn fa-3x text-muted mb-3"></i>
            <p class="text-muted">No announcements yet.</p>
            <a asp-action="CreateAnnouncement" class="btn btn-primary">Create First Announcement</a>
        </div>
    }
</div>
