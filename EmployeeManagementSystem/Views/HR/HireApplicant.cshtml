@model EmployeeManagementSystem.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Hire Applicant";
}

@section Styles {
    <style>
        .form-container {
            background: white;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        }

        .form-control, .form-select {
            border-radius: 10px;
            padding: 12px 15px;
            border: 2px solid #e1e1e1;
        }

        .btn-submit {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 12px 30px;
            color: white;
            font-weight: 600;
        }

        .section-divider {
            border-bottom: 2px solid #f0f0f0;
            padding-bottom: 15px;
            margin-bottom: 25px;
            color: #667eea;
            font-weight: 600;
        }
    </style>
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-container">
                <div class="text-center mb-4">
                    <i class="fas fa-user-check fa-3x text-success mb-3"></i>
                    <h3 class="fw-bold">Hire Applicant</h3>
                    <p class="text-muted">Convert applicant to employee - Create their account</p>
                </div>

                <form asp-action="HireApplicant" asp-route-applicationId="@ViewBag.ApplicationId" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="alert alert-success mb-4">
                        <strong><i class="fas fa-info-circle me-2"></i>Pre-filled Information:</strong>
                        Personal details from application. Complete employment details below.
                    </div>

                    <!-- Profile Picture Upload -->
                    <div class="text-center mb-4 pb-3 border-bottom">
                        <h6 class="text-muted mb-3"><i class="fas fa-camera me-2"></i>Employee Photo (Optional)</h6>
                        <input type="file" name="profilePicture" accept="image/*" class="form-control" style="max-width: 400px; margin: 0 auto;" />
                        <small class="text-muted d-block mt-2">Upload employee's profile picture</small>
                    </div>

                    <!-- Personal Information (Pre-filled) -->
                    <h6 class="section-divider"><i class="fas fa-user me-2"></i>Personal Information (Pre-filled)</h6>

                    <div class="alert alert-info mb-3">
                        <small>
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Employee Number will be auto-generated</strong>
                        </small>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="FirstName" class="form-label fw-semibold"></label>
                            <input asp-for="FirstName" class="form-control" readonly style="background: #f0f0f0;" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="LastName" class="form-label fw-semibold"></label>
                            <input asp-for="LastName" class="form-control" readonly style="background: #f0f0f0;" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Gender" class="form-label fw-semibold"></label>
                            <select asp-for="Gender" class="form-select">
                                <option value="">-- Select Gender --</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <input asp-for="Email" class="form-control" readonly style="background: #f0f0f0;" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DateOfBirth" class="form-label fw-semibold"></label>
                            <input asp-for="DateOfBirth" type="date" class="form-control" readonly style="background: #f0f0f0;" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DateHired" class="form-label fw-semibold"></label>
                            <input asp-for="DateHired" type="date" class="form-control" />
                            <span asp-validation-for="DateHired" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Employment Details -->
                    <h6 class="section-divider"><i class="fas fa-briefcase me-2"></i>Employment Details</h6>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DepartmentId" class="form-label fw-semibold"></label>
                            <select asp-for="DepartmentId" asp-items="@ViewBag.Departments" class="form-select">
                                <option value="">-- Select Department --</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PositionId" class="form-label fw-semibold"></label>
                            <select asp-for="PositionId" asp-items="@ViewBag.Positions" class="form-select">
                                <option value="">-- Select Position --</option>
                            </select>
                            <span asp-validation-for="PositionId" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Account Credentials -->
                    <h6 class="section-divider"><i class="fas fa-lock me-2"></i>Account Credentials</h6>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label fw-semibold"></label>
                            <input asp-for="Password" class="form-control" placeholder="Create password for employee" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="ApplicationDetails" asp-route-id="@ViewBag.ApplicationId" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back
                        </a>
                        <button type="submit" class="btn btn-submit btn-success" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
                            <i class="fas fa-user-check me-1"></i>Hire & Create Account
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>