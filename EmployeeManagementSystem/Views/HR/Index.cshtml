@model IEnumerable<EmployeeManagementSystem.Models.Employee>
@{
    ViewData["Title"] = "Employee List";
}

@section Styles {
    <style>
        .page-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 30px;
        }

        .search-box {
            background: white;
            border-radius: 25px;
            padding: 5px 5px 5px 20px;
            display: flex;
            align-items: center;
            max-width: 400px;
        }

            .search-box input {
                border: none;
                outline: none;
                flex: 1;
                padding: 10px;
            }

            .search-box button {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                border: none;
                border-radius: 20px;
                padding: 10px 25px;
                color: white;
            }

        .table-container {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        }

        .btn-action {
            padding: 6px 15px;
            border-radius: 15px;
            font-size: 0.85rem;
        }

        .badge-active {
            background: #28a745;
            color: white;
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
        }

        .badge-inactive {
            background: #dc3545;
            color: white;
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
        }

        .employee-avatar {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            margin-right: 10px;
        }
    </style>
}

<div class="container py-4">
    <!-- Success Message -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 class="fw-bold mb-1"><i class="fas fa-users me-2"></i>Employee List</h2>
                <p class="mb-0 opacity-75">Manage all employee records</p>
            </div>
            <div class="col-md-6">
                <form asp-action="Index" method="get" class="d-flex justify-content-md-end mt-3 mt-md-0">
                    <div class="search-box">
                        <i class="fas fa-search text-muted"></i>
                        <input type="text" name="searchTerm" placeholder="Search employees..." value="@ViewBag.SearchTerm" />
                        <button type="submit">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Action Button -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="text-muted mb-0">
            Showing <strong>@Model.Count()</strong> employee(s)
            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
            {
                <span>for "<strong>@ViewBag.SearchTerm</strong>"</span>
                <a asp-action="Index" class="ms-2">(Clear)</a>
            }
        </p>
        <a asp-action="Create" class="btn btn-success btn-action">
            <i class="fas fa-plus me-1"></i>Add Employee
        </a>
    </div>

    <!-- Employee Table -->
    <div class="table-container">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Employee</th>
                        <th>Employee #</th>
                        <th>Department</th>
                        <th>Position</th>
                        <th>Date Hired</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var emp in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(emp.ProfilePicturePath))
                                        {
                                            <img src="@emp.ProfilePicturePath" alt="@emp.FullName" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover; margin-right: 10px;">
                                        }
                                        else
                                        {
                                            <div class="employee-avatar">
                                                @emp.FirstName[0]@emp.LastName[0]
                                            </div>
                                        }
                                        <div>
                                            <strong>@emp.FullName</strong><br>
                                            <small class="text-muted">@emp.Email</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@emp.EmployeeNumber</td>
                                <td>@emp.Department?.DepartmentName</td>
                                <td>@emp.Position?.PositionTitle</td>
                                <td>@emp.DateHired.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (emp.IsActive)
                                    {
                                        <span class="badge-active">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge-inactive">Inactive</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@emp.EmployeeId" class="btn btn-sm btn-outline-info" title="View">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@emp.EmployeeId" class="btn btn-sm btn-outline-warning" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@emp.EmployeeId" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this employee?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                <p class="text-muted">No employees found.</p>
                                <a asp-action="Create" class="btn btn-primary">Add Your First Employee</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>