@model EmployeeManagementSystem.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register Employee";
}

@section Styles {
    <style>
        .form-container {
            background: white;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        }

        .form-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .form-header i {
                font-size: 50px;
                color: #667eea;
                margin-bottom: 15px;
            }

        .form-control, .form-select {
            border-radius: 10px;
            padding: 12px 15px;
            border: 2px solid #e1e1e1;
        }

            .form-control:focus, .form-select:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            }

        .btn-submit {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 12px 30px;
            color: white;
            font-weight: 600;
        }

            .btn-submit:hover {
                opacity: 0.9;
                color: white;
            }

        .section-divider {
            border-bottom: 2px solid #f0f0f0;
            padding-bottom: 15px;
            margin-bottom: 25px;
            color: #667eea;
            font-weight: 600;
        }
    </style>
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-container">
                <div class="form-header">
                    <i class="fas fa-user-plus"></i>
                    <h3 class="fw-bold">Register New Employee</h3>
                    <p class="text-muted">Create employee account with login credentials</p>
                </div>

                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Personal Information -->
                    <h6 class="section-divider"><i class="fas fa-user me-2"></i>Personal Information</h6>

                    <div class="alert alert-info mb-3">
                        <small>
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Employee Number will be auto-generated</strong> upon registration
                        </small>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="FirstName" class="form-label fw-semibold"></label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="LastName" class="form-label fw-semibold"></label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Gender" class="form-label fw-semibold"></label>
                            <select asp-for="Gender" class="form-select">
                                <option value="">-- Select Gender --</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DateOfBirth" class="form-label fw-semibold"></label>
                            <input asp-for="DateOfBirth" type="date" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DateHired" class="form-label fw-semibold"></label>
                            <input asp-for="DateHired" type="date" class="form-control" />
                            <span asp-validation-for="DateHired" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Contact Information -->
                    <h6 class="section-divider"><i class="fas fa-address-book me-2"></i>Contact Information</h6>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <input asp-for="Email" class="form-control" placeholder="employee@company.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="09XX XXX XXXX" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label fw-semibold"></label>
                        <textarea asp-for="Address" class="form-control" rows="2" placeholder="Enter complete address"></textarea>
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <!-- Employment Information -->
                    <h6 class="section-divider"><i class="fas fa-briefcase me-2"></i>Employment Information</h6>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DepartmentId" class="form-label fw-semibold"></label>
                            <select asp-for="DepartmentId" asp-items="@ViewBag.Departments" class="form-select">
                                <option value="">-- Select Department --</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PositionId" class="form-label fw-semibold"></label>
                            <select asp-for="PositionId" asp-items="@ViewBag.Positions" class="form-select">
                                <option value="">-- Select Position --</option>
                            </select>
                            <span asp-validation-for="PositionId" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Account Information -->
                    <h6 class="section-divider"><i class="fas fa-lock me-2"></i>Account Credentials</h6>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label fw-semibold"></label>
                            <input asp-for="Password" class="form-control" placeholder="Minimum 6 characters" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-controller="HR" asp-action="Dashboard" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
                        </a>
                        <button type="submit" class="btn btn-submit">
                            <i class="fas fa-user-check me-1"></i>Register Employee
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>