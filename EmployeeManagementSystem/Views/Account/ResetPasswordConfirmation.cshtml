@{
    ViewData["Title"] = "Password Reset Successful";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smartron Technology</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        .success-card {
            background: white;
            border-radius: 20px;
            padding: 40px;
            max-width: 550px;
            text-align: center;
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        }
        .success-icon {
            width: 85px;
            height: 85px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0 auto 20px;
        }
        .success-icon i {
            font-size: 45px;
            color: white;
        }
        .btn-login {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 12px 25px;
            border-radius: 10px;
            font-weight: 600;
            color: white;
        }
        .btn-login:hover {
            opacity: 0.9;
            color: white;
        }
    </style>
</head>

<body>
    <div class="success-card">

        <div class="success-icon">
            <i class="fas fa-check"></i>
        </div>

        <h3 class="fw-bold mb-3">Your Password Has Been Reset!</h3>

        <p class="text-muted">
            Your password was successfully updated.
            You can now log in using your new credentials.
        </p>

        <a asp-action="Login" class="btn btn-login mt-3">
            <i class="fas fa-arrow-right me-2"></i>Go to Login
        </a>
    </div>
</body>
</html>
