@{
    ViewData["Title"] = "Password Reset Link";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smartron Technology</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .confirmation-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
            padding: 40px;
            text-align: center;
            max-width: 600px;
        }

        .success-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }

            .success-icon i {
                font-size: 40px;
                color: white;
            }

        .reset-link-box {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 10px;
            border: 2px solid #667eea;
            margin: 20px 0;
            word-wrap: break-word;
        }
    </style>
</head>
<body>
    <div class="confirmation-card">
        <div class="success-icon">
            <i class="fas fa-envelope"></i>
        </div>
        <h3 class="fw-bold mb-3">Password Reset Link Generated!</h3>

        @if (TempData["ResetLink"] != null)
        {
            <p class="text-muted mb-3">
                For <strong>@TempData["ResetEmail"]</strong>
            </p>

            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Demo Mode:</strong> In production, this link would be sent to your email. For now, click the link below to reset your password.
            </div>

            <div class="reset-link-box">
                <small class="text-muted d-block mb-2">Click this link to reset your password:</small>
                <a href="@TempData["ResetLink"]" class="text-primary fw-bold">
                    <i class="fas fa-link me-1"></i>Reset Password Link
                </a>
            </div>

            <p class="text-muted small">
                This link will expire after you use it or after a certain period of time.
            </p>
        }
        else
        {
            <p class="text-muted">
                If an account exists with the email you provided, you will receive a password reset link.
            </p>
        }

        <a asp-action="Login" class="btn btn-primary mt-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; padding: 10px 30px; border-radius: 10px;">
            <i class="fas fa-arrow-left me-2"></i>Back to Login
        </a>
    </div>
</body>
</html>