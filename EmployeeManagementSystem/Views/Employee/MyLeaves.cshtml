@model IEnumerable<EmployeeManagementSystem.Models.LeaveRequest>
@{
    ViewData["Title"] = "My Leave Requests";
}

@section Styles {
    <style>
        .page-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 30px;
        }

        .table-container {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        }

        .badge-pending {
            background: #ffc107;
            color: #333;
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
        }

        .badge-approved {
            background: #28a745;
            color: white;
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
        }

        .badge-rejected {
            background: #dc3545;
            color: white;
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
        }

        .badge-cancelled {
            background: #6c757d;
            color: white;
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
        }
    </style>
}

<div class="container py-4">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="fw-bold mb-1"><i class="fas fa-calendar-alt me-2"></i>My Leave Requests</h2>
                <p class="mb-0 opacity-75">Track your leave applications</p>
            </div>
            <a asp-action="FileLeave" class="btn btn-light">
                <i class="fas fa-plus me-1"></i>File New Leave
            </a>
        </div>
    </div>

    <div class="table-container">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Leave Type</th>
                        <th>Duration</th>
                        <th>Reason</th>
                        <th>Date Filed</th>
                        <th>Status</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var leave in Model)
                        {
                            <tr>
                                <td><strong>@leave.LeaveType</strong></td>
                                <td>
                                    @leave.StartDate.ToString("MMM dd") - @leave.EndDate.ToString("MMM dd, yyyy")<br>
                                    <small class="text-muted">(@leave.TotalDays day(s))</small>
                                </td>
                                <td style="max-width: 250px;">
                                    <small>@leave.Reason</small>
                                    @if (!string.IsNullOrEmpty(leave.Remarks))
                                    {
                                        <br>
                                        <strong class="text-muted">HR Remarks:</strong>

                                        <small class="text-info">@leave.Remarks</small>
                                    }
                                </td>
                                <td>@leave.DateFiled.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @switch (leave.Status)
                                    {
                                        case EmployeeManagementSystem.Models.LeaveStatus.Pending:
                                            <span class="badge-pending">Pending</span>
                                            break;
                                        case EmployeeManagementSystem.Models.LeaveStatus.Approved:
                                            <span class="badge-approved">Approved</span>
                                            break;
                                        case EmployeeManagementSystem.Models.LeaveStatus.Rejected:
                                            <span class="badge-rejected">Rejected</span>
                                            break;
                                        case EmployeeManagementSystem.Models.LeaveStatus.Cancelled:
                                            <span class="badge-cancelled">Cancelled</span>
                                            break;
                                    }
                                </td>
                                <td class="text-center">
                                    @if (leave.Status == EmployeeManagementSystem.Models.LeaveStatus.Pending)
                                    {
                                        <form asp-action="CancelLeave" asp-route-id="@leave.LeaveRequestId" method="post" class="d-inline" onsubmit="return confirm('Cancel this leave request?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-times"></i> Cancel
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <small class="text-muted">
                                            @if (leave.DateProcessed != null)
                                            {
                                                @:Processed: @leave.DateProcessed?.ToString("MMM dd")
                                            }
                                        </small>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                                <p class="text-muted">You haven't filed any leave requests yet.</p>
                                <a asp-action="FileLeave" class="btn btn-primary">File Your First Leave</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Dashboard" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
        </a>
    </div>
</div>