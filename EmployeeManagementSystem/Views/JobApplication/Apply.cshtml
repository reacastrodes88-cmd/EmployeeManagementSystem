@model EmployeeManagementSystem.Models.JobApplication
@{
    ViewData["Title"] = "Apply for a Position";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smartron Technology</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 40px 0;
        }

        .application-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
            padding: 40px;
            max-width: 800px;
            margin: 0 auto;
        }

        .header-section {
            text-align: center;
            margin-bottom: 30px;
        }

            .header-section i {
                font-size: 60px;
                color: #667eea;
                margin-bottom: 15px;
            }

        .form-control, .form-select {
            border-radius: 10px;
            padding: 12px 15px;
            border: 2px solid #e1e1e1;
        }

            .form-control:focus, .form-select:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            }

        .btn-submit {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 15px 40px;
            color: white;
            font-weight: 600;
            width: 100%;
        }

        .section-title {
            color: #667eea;
            font-weight: 600;
            border-bottom: 2px solid #f0f0f0;
            padding-bottom: 10px;
            margin: 25px 0 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="application-container">
            <div class="header-section">
                <i class="fas fa-briefcase"></i>
                <h2 class="fw-bold">Job Application Form</h2>
                <p class="text-muted">Join our team! Fill out the form below to apply.</p>
            </div>

            <form asp-action="Apply" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Personal Information -->
                <h6 class="section-title"><i class="fas fa-user me-2"></i>Personal Information</h6>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FirstName" class="form-label fw-semibold"></label>
                        <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="LastName" class="form-label fw-semibold"></label>
                        <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="DateOfBirth" class="form-label fw-semibold"></label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                </div>

                <!-- Contact Information -->
                <h6 class="section-title"><i class="fas fa-address-book me-2"></i>Contact Information</h6>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label fw-semibold"></label>
                        <input asp-for="Email" class="form-control" placeholder="your.email@example.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="09XX XXX XXXX" />
                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-semibold"></label>
                    <textarea asp-for="Address" class="form-control" rows="2" placeholder="Complete address"></textarea>
                    <span asp-validation-for="Address" class="text-danger small"></span>
                </div>

                <!-- Job Application Details -->
                <h6 class="section-title"><i class="fas fa-briefcase me-2"></i>Application Details</h6>

                <div class="mb-3">
                    <label asp-for="ApplyingForPosition" class="form-label fw-semibold"></label>
                    <input asp-for="ApplyingForPosition" class="form-control" placeholder="e.g., Software Developer, HR Specialist" />
                    <span asp-validation-for="ApplyingForPosition" class="text-danger small"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Education" class="form-label fw-semibold"></label>
                        <input asp-for="Education" class="form-control" placeholder="e.g., Bachelor's Degree in Computer Science" />
                        <span asp-validation-for="Education" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="YearsOfExperience" class="form-label fw-semibold"></label>
                        <input asp-for="YearsOfExperience" type="number" class="form-control" placeholder="Years" />
                        <span asp-validation-for="YearsOfExperience" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="PreviousCompany" class="form-label fw-semibold"></label>
                    <input asp-for="PreviousCompany" class="form-control" placeholder="Your most recent company" />
                    <span asp-validation-for="PreviousCompany" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Skills" class="form-label fw-semibold"></label>
                    <textarea asp-for="Skills" class="form-control" rows="2" placeholder="e.g., C#, JavaScript, Team Leadership"></textarea>
                    <span asp-validation-for="Skills" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CoverLetter" class="form-label fw-semibold"></label>
                    <textarea asp-for="CoverLetter" class="form-control" rows="5" placeholder="Tell us why you want to work with us..."></textarea>
                    <span asp-validation-for="CoverLetter" class="text-danger small"></span>
                </div>

                <!-- Resume Upload -->
                <h6 class="section-title"><i class="fas fa-file-upload me-2"></i>Resume/CV</h6>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Upload Resume (PDF, DOCX)</label>
                    <input type="file" name="resume" accept=".pdf,.doc,.docx" class="form-control" />
                    <small class="text-muted">Optional but recommended. Max 10MB</small>
                </div>

                <button type="submit" class="btn btn-submit">
                    <i class="fas fa-paper-plane me-2"></i>Submit Application
                </button>

                <div class="text-center mt-3">
                    <small class="text-muted">
                        Already have an account? <a href="/Account/Login">Login here</a>
                    </small>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>